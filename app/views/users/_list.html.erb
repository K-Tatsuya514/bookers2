<div class="col-xs-3">
	<div class="UserIfo">
		<h1 class="title">User info</h1>

		<%= attachment_image_tag @user, :profile_image, :fill, 100,100, format: 'jpeg', fallback: 'no_image.jpeg',class: 'field' %>
		<table class="table">
			<tbody>
				<tr>
					<th>name</th>
					<td><%= @user.name %></td>
				</tr>
				<tr>
					<th>introduction</th>
					<td><%= @user.introduction %></td>
				</tr>
			</tbody>
		</table>

    	<%= link_to edit_user_path(current_user.id), class: 'btn' do %><span class="glyphicon glyphicon-wrench edit-icon" aria-hidden="true"></span><% end %>
	</div>

	<div class="NewBook">
		<h1 class="title">New book</h1>
		<%= form_for(@book) do |f| %>
		<div>
			<div class="form-title">
				<%= f.label :title%>
			</div>
			<%= f.text_field :title,class: 'book-new-field' %>
		</div>
		<div>
			<div class="form-title field">
				Opinion
			</div>
			<%= f.text_area :body,class: 'book-new-field' %>
		</div>
		<%= f.submit class: 'btn' %>
		<% end %>
	</div>



</div>