<div id="notice">
	<%= flash[:notice] %>
</div>


<div class="container">
	<div class="row">
		<%= render 'users/list' %>
		<div class="Books col-xs-9">
			<h1 class="title">Book detail</h1>
			<table class="table">
				<tbody>
					<tr>
						<td>
							<div class="photo">
								<%= attachment_image_tag @user, :profile_image, :fill, 40,40, format: 'jpeg', fallback: 'no_image.jpeg', class: 'image'  %>
							</div>
							<div>
								<%= link_to @user.name, user_path(@user), class: 'back-black' %>
							</div>
						</td>
						<td><%= @books.title %></td>
						<td><%= @books.body %></td>
						<% if @user == current_user %>
						<td class="edit"><%= link_to 'Edit', edit_book_path(@books), class: 'btn' %></td>
						<td class="destroy"><%= link_to 'Destroy', book_path(@books), method: :delete, 'data-confirm' => "本当に消しますか？", class: 'btn' %></td>
						<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
